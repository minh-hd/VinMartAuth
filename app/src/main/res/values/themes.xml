<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VinMartAuth" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_crimson</item>
        <item name="colorPrimaryVariant">@color/darker_crimson</item>
        <item name="colorOnPrimary">@color/quite_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/matisse</item>
        <item name="colorSecondaryVariant">@color/picton_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/source_san_pro</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="RecycleView">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BoldSmallText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallText">
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="BoldText">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="TitleText">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ItemLabelText">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="GreenLink">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_crimson</item>
    </style>

    <style name="Price">
        <item name="android:textColor">@color/primary_crimson</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="ProductName">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
</resources>
